%table.table
  %thead
    %tr
      %th When
      %th Duration
      %th Where
      %th Name
  %tbody
    - @instances.each do |instance|
      %tr
        %td
          = instance.start_time.strftime('%m-%d')
          %br
          = instance.start_time.strftime('%H:%M')
        %td= pluralize(instance.instructable.duration, 'hour')
        %td= instance.formatted_location
        %td= instance.instructable.name

%tr
  %td.display_name{id: "edit_user_#{user.id}"}
    = link_to user.display_name, edit_admin_user_path(user)
  %td.tracks= user.coordinator? ? user.tracks.join(", ") : '-'
  %td.instructor
    - if user.instructor?
      = link_to user.instructables.count, user_instructables_path(user)
      = " / "
      = user.instructables_session_count
    - else
      = "-"
  %td.pu_staff= user.pu_staff? ? 'Yes' : '-'
  %td.admin= user.admin? ? 'Yes' : '-'
  %td.last_login= pretty_date_from_now(user.current_sign_in_at)

%tr
  %td.watch
    - if @schedule.instructables.include?(instructable.id)
      - classes = 'btn btn-sm btn-success'
      - message = 'Remove'
    - else
      - classes = 'btn btn-sm'
      - message = 'Add'
    - bid = "button-#{instructable.id}"
    - data = { 'user-id' => @user.id, id: instructable.id }
    %button.watch{id: bid, class: classes, data: data}= message
  %td
    %a.popover-wide{rel: 'popover', data: {trigger: 'click', placement: 'right', title: markdown_html(instructable.name), html: 'true', content: markdown_html(instructable.description_web.present? ? instructable.description_web : instructable.description_book)}}= markdown_html(instructable.name)
    %br
    = instructable.titled_sca_name
  %td
    = instructable.formatted_topic
    %br
    = instructable.culture
  %td= render :partial => 'instructables/instructable_schedule_details', locals: { instructable: instructable }
